{
  "extends": "next/core-web-vitals",
  "ignorePatterns": [
    "package-lock.json",
    "node_modules",
    "next.config.js"
  ],
  "plugins": [
    "react",
    "@typescript-eslint",
    "sort-imports-es6-autofix"
  ],
  "rules": {
    "react-hooks/exhaustive-deps": "off",
    "quotes": [
      "error",
      "single"
    ],
    "jsx-quotes": [
      "error",
      "prefer-single"
    ],
    "indent": [
      "error",
      2
    ],
    "linebreak-style": [
      "error",
      "unix"
    ],
    "semi": [
      "error",
      "never"
    ],
    "no-unused-vars": "error",
    "comma-dangle": "error",
    "object-curly-spacing": [
      "error",
      "never"
    ],
    "sort-imports-es6-autofix/sort-imports-es6": [
      2,
      {
        "ignoreCase": false,
        "ignoreMemberSort": false,
        "memberSyntaxSortOrder": [
          "none",
          "all",
          "multiple",
          "single"
        ]
      }
    ],
    "eol-last": ["error", "always"],
    "max-len": [
      "error",
      {
        "code": 120
      }
    ]
  }
  
}
