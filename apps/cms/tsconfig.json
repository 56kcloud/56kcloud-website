{
  "extends": "@strapi/typescript-utils/tsconfigs/server",
  "compilerOptions": {
    "lib": ["esNext"],
    "outDir": "dist",
    "rootDir": "."
  },
  "include": [
    "./",
    "./**/*.ts",
    "./**/*.js",
    "src/**/*.json"
  ],
  "exclude": [
    "node_modules/",
    "build/",
    "dist/",
    ".cache/",
    ".tmp/",
    "src/admin/",
    "**/*.test.*",
    "src/plugins/**",
    "types/generated/**",
  ]
}
